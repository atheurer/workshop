{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenv": {
    "name": "stream8",
    "label": "CentOS-Stream 8",
    "origin": {
      "image": "registry.centos.org/centos/centos",
      "tag": "8"
    },
    "properties": {
      "packages": {
        "type": "rpm",
        "manager": "dnf"
      }
    }
  },
  "requirements": [
    {
      "name": "stream-conversion",
      "type": "manual",
      "manual_info": {
        "commands": [
          "dnf -v -y install centos-release-stream",
          "dnf -v -y swap centos-{linux,stream}-repos",
          "dnf -v -y distro-sync"
        ]
      }
    },
    {
      "name": "python",
      "type": "distro",
      "distro_info": {
        "packages": [
          "python3",
          "python3-pip"
        ]
      }
    },
    {
      "name": "compiling",
      "type": "distro",
      "distro_info": {
        "packages": [
          "flex", "bison", "gcc", "libtool", "autoconf", "automake", "make"
        ]
      }
    },
    {
      "name": "utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "tar", "cpio", "xz", "gzip", "jq", "git", "cpio", "findutils", "hostname", "iputils"
        ]
      }
    }
  ]
}
