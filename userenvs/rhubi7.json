{
    "workshop": {
	    "schema": {
	        "version": "2020.03.02"
	    }
    },
    "userenv": {
	    "name": "rhubi7",
	    "label": "Red Hat UBI 7",
	    "origin": {
	        "image": "registry.access.redhat.com/ubi7/ubi",
	        "tag": "latest"
	    },
	    "properties": {
	        "packages": {
		    "type": "rpm",
		    "manager": "yum"
	        }
	    }
    },
    "requirements": [
	    {
	        "name": "python3",
	        "type": "distro",
	        "distro_info": {
		        "packages": [
		            "rh-python36",
                    "rh-python36-python-pip"
		        ]
	            }
	    },
	    {
	        "name": "post-python",
	        "type": "manual",
	        "manual_info": {
		        "commands": [
		            "alternatives --install /usr/bin/python3 python3 /opt/rh/rh-python36/root/usr/bin/python3 1",
		            "alternatives --install /usr/bin/pip3 pip3 /opt/rh/rh-python36/root/usr/bin/pip3 1"
		        ]
	            }
	    },
	    {
	        "name": "gcc",
	        "type": "distro",
	        "distro_info": {
		        "packages": [
		            "gcc"
		        ]
	        }
	    },
	    {
	        "name": "make",
	        "type": "distro",
	        "distro_info": {
		        "packages": [
		            "make"
		        ]
	        }
	    },
	    {
	        "name": "git",
	        "type": "distro",
	        "distro_info": {
		        "packages": [
		            "git"
		        ]
	        }
	    },
	    {
	        "name": "cpio",
	        "type": "distro",
	        "distro_info": {
		    "packages": [
		            "cpio"
		        ]
	        }
	    },
	    {
	        "name": "findutils",
	        "type": "distro",
	        "distro_info": {
		    "packages": [
		            "findutils"
		        ]
	        }
	    },
	    {
	        "name": "hostname",
	        "type": "distro",
	        "distro_info": {
		    "packages": [
		            "hostname"
		        ]
	        }
	    }
    ]
}
